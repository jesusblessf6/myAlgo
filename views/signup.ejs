<%include head%>

<div class="col-sm-8 col-sm-offset-2">
	<form class="form-horizontal">
		<fieldset>
			<legend>加入我们</legend>
			<div class="form-group">
				<label for="loginName" class="col-lg-3 control-label">登录名</label>
				<div class="col-lg-9">
					<input type="text" class="form-control" id="loginName" name="loginName">
				</div>
			</div>
			<div class="form-group">
				<label for="email" class="col-lg-3 control-label">Email</label>
				<div class="col-lg-9">
					<input type="email" class="form-control" id="email" name="email">
				</div>
			</div>
			<div class="form-group">
				<label for="password" class="col-lg-3 control-label">密码</label>
				<div class="col-lg-9">
					<input type="password" class="form-control" id="password" name="password">
				</div>
			</div>
			<div class="form-group">
				<label for="passwordConfirm" class="col-lg-3 control-label">密码确认</label>
				<div class="col-lg-9">
					<input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm">
				</div>
			</div>
			<div class="form-group">
				<div class="col-lg-12">
					<input type="submit" class="btn btn-primary pull-right" value="注册">
				</div>
			</div>
		</fieldset>
	</form>
</div>

<%include foot%>
